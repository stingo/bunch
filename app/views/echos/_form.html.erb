                    <div class="col-md-3 col-sm-4">
                      <p class="m0">Headline</p>
                    </div>
                    <div class="col-md-5 col-sm-8">



                      <%= f.input :headline, :label => 'Give this Echo a nice headline', :class => "form-control" %>
                     
                    </div>
                  </div>




       







                    <div class="form-group">
                    <div class="col-md-3 col-sm-4">
                      <p class="m0">Echo Category</p>
                    </div>



                    <div class="col-md-5 col-sm-8">

                       <label>Select a category for this Echo</label>


                       <%= f.collection_select :echocategory_id, Echocategory.all, :id, :name, {:include_blank => 'Select Echo Category'}, :class => "form-control", input_html: { class: "dropdown-toggle "} %>
                      
                    </div>
                  </div>





