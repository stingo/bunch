<div class="" style="background: #F1F2F3">
<%= simple_form_for(@echo) do |f| %>
 <%= f.error_notification %>

 <% if echo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(echo.errors.count, "error") %> prohibited this echo from being saved:</h2>

      <ul>
      <% echo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


   <!-- Main section-->
      <main class="container">
        <!-- Page content-->
        <section>
          <div class="container-fluid">
