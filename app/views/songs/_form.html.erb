<%= simple_form_for(@song) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :songcover %>
    <%= f.input :audio %>
    <%= f.input :lyricsbody1 %>
    <%= f.input :lyricschorus1 %>
    <%= f.input :lyricsbody2 %>
    <%= f.input :lyricschorus2 %>
    <%= f.input :lyricsbody3 %>
    <%= f.input :lyricschorus3 %>
    <%= f.input :youtubeurl %>
    <%= f.input :slug %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
