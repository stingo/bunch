<%= simple_form_for(@song) do |f| %>
  <%= f.error_notification %>
    <% if song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">

  <div class="form-inputs">
    <%= f.input :title %>
    <div class="col-md-5 col-sm-8">

                       <label>Select a Artist for this Song</label>


                       <%= f.collection_select :artist_id, Artist.all, :id, :name, {:include_blank => 'Select Artist'}, :class => "form-control", input_html: { class: "dropdown-toggle "} %>
                      
                    </div>

                    <div class="col-md-5 col-sm-8">

                       <label>Select a Genre for this Song</label>


                       <%= f.collection_select :genre_id, Genre.all, :id, :name, {:include_blank => 'Select Genre'}, :class => "form-control", input_html: { class: "dropdown-toggle "} %>
                      
                    </div>




    <%= f.input :description %>
    <%# f.input :lyricsbody1 %>
    <%# f.input :lyricschorus1 %>
    <%# f.input :lyricsbody2 %>
    <%# f.input :lyricschorus2 %>
    <%# f.input :lyricsbody3 %>
    <%# f.input :lyricschorus3 %>
    <%# f.input :youtubeurl %>

    <br>

    <%# f.input :mp3, as: :file %>


        <p>
    <label>Song (MP3)</label>
    
    <%= f.file_field :sound %>
    <%= f.hidden_field :sound_cache %>
  </p>
  

    <p>
    <label>Song Image</label>
    <%= image_tag(@song.songcover_url(:thumb)) if @song.songcover? %>
    <%= f.file_field :songcover %>
    <%= f.hidden_field :songcover_cache %>
  </p>

  <p>
    <label>
      <%= f.check_box :remove_songcover %>
      Remove songcover
    </label>
  </p>


    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

</div>
