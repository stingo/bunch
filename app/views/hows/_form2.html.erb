<%= simple_form_for(@how) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :howcover %>
    <%= f.input :video %>
    <%= f.input :duration %>
    <%= f.input :recipetips %>
    <%= f.input :slug %>
    <%= f.input :subtitle %>
    <%= f.input :subtitle1 %>
    <%= f.input :subtitle2 %>
    <%= f.input :subtitle3 %>
    <%= f.input :subbody1 %>
    <%= f.input :subbody2 %>
    <%= f.input :subbody3 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
