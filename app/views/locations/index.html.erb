<h1 align="center">Listing All Locations</h1>

<div align="center">

<%# will_paginate %>

<% @locations.each do |location| %>

<ul class="listing">

<div class="row">

<div class="well col-md-4 col-md-offset-4">

<li class="event-title">

<%= link_to "#{location.name}", location_path(location) %>

</li>

<li><small><%= pluralize(location.events.count, "event") %></small></li>

<li><small><%= pluralize(location.companies.count, "company") %></small></li>

<li><small><%= pluralize(location.profiles.count, "people") %></small></li>

<li><small><%= pluralize(location.jobs.count, "job") %></small></li>

</div>

</div>

</ul>

<% end %>

<%# will_paginate %>

</div>

