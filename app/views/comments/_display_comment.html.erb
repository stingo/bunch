<div class="comments-show bg-gray-lighter">
  <div class="comment">
    

    <!--p><%# comment.body %><br></p-->

        <div class="mt">
                    <div class="media">

                      <!--comment profile image-->
                      <div class="media-left">




                      <% if comment.profile.pesnavatar? %>
                       <%=link_to (image_tag(comment.profile.pesnavatar.url(:small), :class => "media-object img-circle thumb48 m-l-10 m-t-10")), profile_path(comment.profile_id) %>
                      <% else %> 
                      <%= link_to (image_tag("noimage.jpg", :class => "media-object img-circle thumb48")), profile_path(comment.profile_id) %>
                      <% end %>





                       
                      </div>
                      <!--comment profile image ends-->


                      <div class="media-body">

                        <div class="col-lg-1 col-md-1 col-sm-1 col-xs-3 text-right pull-right">

              <div class="dropdown pull-right">
                <% if comment.profile == current_profile %>
                  <button class="m-l-10 btn btn-xs btn-default btn-icon dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"><i class="fa fa-ellipsis-v"></i></button>
                    <ul class="dropdown-menu dropdown-menu-right m-l-10">
                      <li>
                          <h5><%= link_to 'Delete comment', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: "label label-danger text-right m-l-10" %></h5>
                      </li>
                <% end %>


                          <!--li><a href="#">Report spam or abuse</a></li>
                          <li><a href="#">Send a message</a></li-->
                        </ul>
              </div>
                <!--a href="#" class="btn btn-primary">Edit</a-->
            </div><!-- /.cols ends -->

                        <!--profile name-->

                        <h6 class="mt10 mb-sm"><%= link_to comment.profile.first_name.split(" ").map(&:capitalize).join(" ") + ' '+ comment.profile.last_name.split(" ").map(&:capitalize).join(" "), profile_path(comment.profile_id) if comment.profile.first_name || comment.profile.last_name %>

                          <!--profile name ends-->

                         <small class="text-muted"><% if comment.created_at > Time.now.beginning_of_day %>
                         <%="#{time_ago_in_words(comment.created_at)} ago"%> 
                         <% else %>
                         <%= comment.created_at.strftime("%H:%M %b %d, %Y ") %> 
                         <% end %>
                
                <span class="divider">| </span>Report</small>

                        </h6>
<!-- add read more for comments above 280 character -->

    <div class="mb m-r-10"><% if comment.body.length > 280 %>
    <%= truncate(comment.body, length: 280) %>
    <%= link_to 'Read more', '', class: "read-more-#{comment.id}" %>
    <script>
      $('.read-more-<%= comment.id %>').on('click', function(e) {
        e.preventDefault()
        $(this).parent().html('<%= escape_javascript comment.body %>')
      })
    </script>
  <% else %>
    <%= best_in_place_if comment.profile == current_profile, comment, :body,  :as => :textarea, :ok_button => 'Save ',  :cancel_button => ' Cancel' %>
  <% end %></div>

<!--end-->
                        

