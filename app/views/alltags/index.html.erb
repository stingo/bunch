<div class="transitions-enabled m-t-10" id="upfrica-pins"><!-- All tags transition-->

    

<% @echos.each do |echo| %>  
    <div class="box panel panel-default"><!--echos parnel box starts-->
<% if echo.echoimage1? %>
      <%= link_to (image_tag(echo.echoimage1.url(:thumb), :class => "img-responsive", :alt =>"echoimage")), echo_path(echo) %>
  
  <% elsif echo.videourl? %>
  <div class="embed-responsive embed-responsive-16by9">
    <%= embed(echo.videourl) %> 
  </div>                      
  <% else %>
  <% end %>
  <h2>
        <%= link_to (truncate(sanitize(echo.headline.titleize, tags: %w(strong em p u br #ff0000 font-size)),:class =>"blk in-inner m-t-5", length: 120)), echo %>
    </h2>
    
      <p class="profile">
    <div class="post-left-info">
    <% if echo.profile.pesnavatar? %>
        <%= link_to (image_tag(echo.profile.pesnavatar.url(:large), :class => "m-l-20 img-circle thumb48 btn-raised btn-circle text-center", :alt =>"profile image")), profile_path(echo.profile_id) %>
        <% else %> 
        <%= link_to (image_tag("noimage.jpg", :class => "media-object img-circle thumb40 btn-raised btn-circle text-center", :alt =>"profile image")), profile_path(@echo.profile_id) %>
         <% end %>

     </div>

       <div class="post-by">
             Published By <%= link_to echo.profile.first_name.split(" ").map(&:capitalize).join(" ") + ' '+ echo.profile.last_name.split(" ").map(&:capitalize).join(" "), profile_path(echo.profile_id) if echo.profile.first_name || echoprofile.last_name %>, <%="#{time_ago_in_words(echo.created_at)} ago"%>  <span class="divider">|</span> <%= link_to Echocategory.friendly.find(echo.echocategory_id).name, echocategory_path(echo.echocategory_id) %><span class="divider">|</span>
           <%= pluralize(echo.impressionist_count(:filter=>:session_hash), "View") %> <span class="divider">|</span> <%= pluralize(echo.comment_threads.size, "Comment")%> <%# echo.tag_counts.map(&:name) %>
             </div>
      </p>
    </div><!--echos panel box ends-->
      <% end %>

<!--hows starts-->

