<%= simple_form_for(@company) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :about %>
    <%= f.input :websiteurl %>

    <div class="form-group">
    <%= f.label :location_ids, "CLOSE LOCATION" %>
    <%= f.select :location_ids, Location.all.pluck(:name, :id), {}, { multiple: true, class: "selectize" } %>
  </div>
<br>
  </div>

  <div class="field">

   <%= f.label :add_company_logo %><br>
    <%= f.file_field :companylogo %><br>

    </div>

    <div class="field">

   <%= f.label :add_company_profile_cover %><br>
    <%= f.file_field :companycover %><br>

    </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
